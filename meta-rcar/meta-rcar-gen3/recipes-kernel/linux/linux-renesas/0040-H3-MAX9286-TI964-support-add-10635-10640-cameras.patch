+struct ti964_ti9x3_priv {
+	struct v4l2_subdev	sd[4];
+	struct device_node	*sd_of_node[4];
+	int			des_addr;
+	int			links;
+	int			lanes;
+	int			csi_rate;
+	const char		*forwarding_mode;
+	const char		*cable_mode;
+	atomic_t		use_count;
